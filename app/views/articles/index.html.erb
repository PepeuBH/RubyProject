<h1 class="centered-title">Articles List</h1>
<table class="table table-hover  table-responsive table align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="1">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
         <tr>
            <td> <%= article.id %> </td>
            <td> <%= article.title %> </td>
            <td> <%= article.description %> </td>
            <td><button class="green-button"><%= link_to 'Show', article_path(article.id) %></button>
            <button class="yellow-button"><%= link_to 'Edit', edit_article_path(article.id) %></button>
            <button class="red-button"><%= link_to 'Delete', article_path(article.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></button></td>
         </tr>
        <% end %>
    </tbody>
</table>

<br>

<button class="blue-button">
<%= link_to 'New Article', new_article_path()%>
</button>

<button class="blue-button">
<%= link_to 'Home Page', root_path%>
</button>


