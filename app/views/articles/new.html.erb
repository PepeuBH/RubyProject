<h1>Create a new Article</h1>

<%# IF IT HAS ANY ERRORS, SHOW THE MESSAGE %>
<% if @article.errors.any? %>
    <h2>The following errros prevented te article from being created
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>


<%= form_with scope: :article, url: articles_path, data: { turbo: false }, local: true do |f|%>
<p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.submit%>
</p>

<% end %>

<br>

<%= link_to 'Return to Articles', articles_path(@article) %>
